<GUI name="bc_progress">
<!-- progress box, parent: "contentContainer" -->
<GuiElement profile="fs25_contractsProgressBox" id="bcProgressBox" debugEnabled="false">
 <!-- double progress bars - - - - - - - - - - - - - - -->
 <GuiElement profile="bc_progressBars" id="bcProgressBars">
	<!-- progr bar 1 -->
	<Text profile="fs25_contractsContentTitle" text="$l10n_bc_progField:"/>
	<BoxLayout profile="myProgressLayout" id="box1" size="760px 46px" position="20px -10px" debugEnabled="false">
        <ThreePartBitmap profile="bc_contractsProgressBarBg" id="progressBarBg">
            <ThreePartBitmap profile="bc_contractsProgressBar" id="progressBar1"/>
        </ThreePartBitmap>
		<Text profile="fs25_contractsContentValue" id="prog1" textAlignment="left" textAutoWidth="true" size="0 40px" />
	</BoxLayout>
	<!-- progr bar 2 -->
	<Text profile="fs25_contractsContentTitle" text="$l10n_bc_progDeliver:" position="0px -70px"/>
	<BoxLayout type="boxLayout" profile="myProgressLayout" id="box2" size="760px 46px" position="20px -80px" debugEnabled="false">
        <ThreePartBitmap profile="bc_contractsProgressBarBg" >
            <ThreePartBitmap profile="bc_contractsProgressBar" id="progressBar2"/>
        </ThreePartBitmap>
		<Text profile="fs25_contractsContentValue" id="prog2" textAlignment="left" textAutoWidth="true" size="0 40px" />
	</BoxLayout>
 </GuiElement>

 <!-- vehicles box -->
 <Bitmap profile="myVehiclesItem" id="bcVehicleTemplate"/>
 <GuiElement profile="myVehiclesBoxMarquee" >
 	<BoxLayout profile="fs25_contractsVehiclesBox" id="vehiclesBox"/>
 </GuiElement>

</GuiElement>
</GUI>
